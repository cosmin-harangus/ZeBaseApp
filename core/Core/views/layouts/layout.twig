{% extends '@tpl.root_two_columns' %}
{% block html %}
    {{ doctype('XHTML11') | raw }}

    <html lang="en">
        <head>
            <base href="{{ basePath() | raw }}" />
            {{ headTitle() | raw }}
            {{ headMeta() | raw }}

            <script src="/js/html5.js" type="text/javascript"></script>
            {{ headScript() | raw }}

            <link rel="shortcut icon" href="/images/favicon.ico" />
            <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
            <link rel="stylesheet" type="text/css" href="/css/default.css" />
            {{ headLink() | raw }}

        </head>

        <body>

            <div class="topbar">
                <div class="fill">
                    <div class="container">
                        <a class="brand" href="{{ url('home') }}">ProjectQuery</a>
                        <ul class="nav">
                            <li class="active"><a href="{{ url('home') }}">Home</a></li>
                            <li><a href="{{ url('ze-auth') }}">Login</a></li>
                        </ul>
                    </div>
                </div>
            </div> <!-- /topbar -->

            <div class="container">
                {% block content %}{% endblock %}

                <footer>
                    <p>&copy; 2006 - {{ date('Y') }} by Around25 Srl. All rights reserved.</p>
                </footer>
            </div> <!-- /container -->

        </body>
    </html>
{% endblock %}